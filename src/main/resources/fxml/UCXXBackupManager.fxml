<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lapr.project.ui.UCXXBackupManagerUI">
    <center>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <Button onAction="#handleCreateBackup" text="Create Backup" />
                    </children>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER">
                    <children>
                        <Button onAction="#handleImportBackup" text="Load Backup" />
                    </children>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </center>
   <top>
          <Label text="UC20/21 - Backup Manager" BorderPane.alignment="CENTER">
              <font>
                  <Font name="System Bold" size="20.0" />
              </font>
          </Label>
   </top>
</BorderPane>
