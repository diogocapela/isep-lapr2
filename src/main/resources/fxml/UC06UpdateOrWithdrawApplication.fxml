                            <VBox.margin>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </VBox.margin>
                        </Label>
                        <ComboBox fx:id="applicationComboBoxUC06" prefWidth="150.0">
                            <VBox.margin>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </VBox.margin>
                        </ComboBox>
